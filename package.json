{
  "name": "@xieyuheng/test-runner",
  "version": "0.2.9",
  "repository": "github:xieyuheng/test-runner",
  "files": [
    "lib"
  ],
  "bin": {
    "test-runner": "bin/test-runner.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "format": "prettier src --write",
    "test:js": "./bin/test-runner.js test node 'lib/**/*.test.js'",
    "test:snapshot": "./bin/test-runner.js snapshot node 'lib/**/*.snapshot.js' --extern snapshot",
    "test:snapshot-error": "./bin/test-runner.js snapshot-error node 'lib/**/*.error.js' --extern snapshot",
    "test": "npm-run-all test:*"
  },
  "devDependencies": {
    "@types/node": "^20.4.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.1",
    "prettier-plugin-organize-imports": "^3.2.3",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@xieyuheng/command-line": "^0.0.10",
    "@xieyuheng/ty": "^0.1.22",
    "change-case": "^4.1.2",
    "fast-deep-equal": "^3.1.3",
    "fast-glob": "^3.3.1",
    "picocolors": "^1.0.0"
  },
  "license": "GPL-3.0-or-later"
}
