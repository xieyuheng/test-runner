{
  "name": "@xieyuheng/test-runner",
  "version": "0.2.5",
  "repository": "github:xieyuheng/test-runner",
  "files": [
    "lib"
  ],
  "bin": {
    "test-runner": "bin/test-runner.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "format": "prettier src --write",
    "test:js": "./bin/test-runner.js test node 'lib/**/*.test.js'",
    "test:snapshot": "./bin/test-runner.js snapshot node 'lib/**/*.snapshot.js' --extern snapshot",
    "test:snapshot-error": "./bin/test-runner.js snapshot-error node 'lib/**/*.error.js' --extern snapshot",
    "test": "npm-run-all test:*"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/node": "^18.11.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@xieyuheng/command-line": "^0.0.7",
    "@xieyuheng/ty": "^0.1.17",
    "change-case": "^4.1.2",
    "fast-deep-equal": "^3.1.3",
    "fast-glob": "^3.2.12",
    "picocolors": "^1.0.0"
  },
  "license": "GPL-3.0-or-later"
}
